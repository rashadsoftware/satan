#[QSA] = Bu GET ile gösterilen verilerin aktif olmasını sağlar yani örnekte sef=$1&id=$2

# link -> from xxxx.php to xxxx
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

RewriteRule ^preview/(.+)$ add-detail.php?action=preview&id=$1 [NC]
RewriteRule category/(.*?)$ category-elan.php?id=$1
RewriteRule subcatgory/(.*?)$ subcategory-elan.php?id=$1
RewriteRule user/(.*?)$ user-elan.php?id=$1

